<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aljaki.gtd3.HomeActivity"
    tools:layout_editor_absoluteY="81dp">

    <TableRow
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COLLECTED"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="28dp"
            android:textSize="5pt" />
    </TableRow>

    <TableRow
        android:id="@+id/trBasket"
        android:background="@android:drawable/list_selector_background"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="18dp"
            android:layout_height="28dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/inbasket2"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="71dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:text="In Basket"
            android:textColor="@android:color/black"
            android:textSize="7pt"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="28dp" />
    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="8dp"
        android:background="#c0c0c0"/>

    <TableRow android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CATEGORISED"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="28dp"
            android:textSize="5pt"/>
    </TableRow>


    <TableRow
        android:background="@android:drawable/list_selector_background"
        android:id="@+id/trToday" android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="28dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/today2"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="71dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:text="Today Actions"
            android:textColor="@android:color/black"
            android:textSize="7pt"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="28dp" />
    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="8dp"
        android:background="#c0c0c0"/>


    <TableRow
        android:background="@android:drawable/list_selector_background"
        android:id="@+id/trNext"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="28dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/next2"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="71dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:text="Next Actions"
            android:textColor="@android:color/black"
            android:textSize="7pt"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="28dp" />
    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="8dp"
        android:background="#c0c0c0"/>

    <TableRow
        android:background="@android:drawable/list_selector_background"
        android:id="@+id/trScheduled"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="28dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/scheduled2"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="71dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:text="Scheduled Actions"
            android:textColor="@android:color/black"
            android:textSize="7pt"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="28dp" />
    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="8dp"
        android:background="#c0c0c0"/>

    <TableRow
        android:background="@android:drawable/list_selector_background"
        android:id="@+id/trSomeday"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="8dp"
            android:layout_height="28dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/someday2"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="71dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:text="Someday Actions"
            android:textColor="@android:color/black"
            android:textSize="7pt"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="28dp" />
    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="8dp"
        android:background="#c0c0c0"/>

    <TableRow
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMPLETED"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="28dp"
            android:textSize="5pt"/>
    </TableRow>


    <TableRow
        android:background="@android:drawable/list_selector_background"
        android:id="@+id/trDone"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="28dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/done2"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="71dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="7pt"
            android:layout_marginLeft="15dp"
            android:text="Log"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="28dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="8dp"
        android:background="#c0c0c0"/>

    <TableRow
        android:id="@+id/trInfo"
        android:background="@android:drawable/list_selector_background"
        android:layout_marginTop="25dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="28dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/info2"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="71dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:text="Info"
            android:textColor="@android:color/black"
            android:textSize="7pt"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="28dp" />
    </TableRow>
</TableLayout>

